<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/toolbar_background_color">

            <ImageView
                android:id="@+id/iv_toolbar_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/toolbar_back" />


            <LinearLayout
                android:id="@+id/ll_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/iv_toolbar_back"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_toolbar_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 搜索-->
            <ImageView
                android:id="@+id/iv_toolbar_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="55dp"
                android:background="@null"
                android:src="@drawable/toolbar_search"
                android:visibility="gone" />

            <!--加号菜单-->
            <ImageView
                android:id="@+id/iv_toolbar_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@null"
                android:src="@drawable/toolbar_add"
                android:visibility="gone" />

            <!--更多按钮-->
            <ImageView
                android:id="@+id/iv_toolbar_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@null"
                android:src="@drawable/toolbar_more" />

            <!-- 添加朋友 -->
            <TextView
                android:id="@+id/tv_toolbar_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:text="添加朋友"
                android:textColor="@color/toolbar_text_color"
                android:textSize="14sp"
                android:visibility="gone" />

