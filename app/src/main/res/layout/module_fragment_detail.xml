<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/module_center_background_color"
    android:orientation="vertical"
    tools:context=".view.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/option_item_normal_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_detail_head"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_detail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="张逸扬"
                android:textColor="@color/module_detail_text_color" />

            <TextView
                android:id="@+id/tv_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ID: qq461625996"
                android:textColor="@color/option_item_content_color" />

            <TextView
                android:id="@+id/tv_detail_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="昵称: gdut-yy"
                android:textColor="@color/option_item_content_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/option_item_normal_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="设置备注和标签"
            android:textColor="@color/module_detail_text_color" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/option_item_normal_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:text="地区"
            android:textColor="@color/module_detail_text_color" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="广东 佛山"
            android:textColor="@color/option_item_content_color" />
    </LinearLayout>

    <View style="@style/ui_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/option_item_normal_color"
        android:orientation="horizontal">

        <TextView

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="个人相册"
            android:textSize="16sp"
            android:textColor="@color/module_detail_text_color" />

        <ImageView
            android:id="@+id/iv_photo_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wzrypf_libai_minruizhili" />

        <ImageView
            android:id="@+id/iv_photo_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wzrypf_libai_fengqiuhuang" />

        <ImageView
            android:id="@+id/iv_photo_3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wzrypf_libai_qiannianzhihu" />
    </LinearLayout>

    <View style="@style/ui_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/option_item_normal_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="更多"
            android:textSize="16sp"
            android:textColor="@color/module_detail_text_color" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/module_detail_send_btn_normal_color"
        android:text="发消息"
        android:textColor="@color/option_item_normal_color"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_video_voice_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/module_detail_video_btn_normal_color"
        android:text="视频通话"
        android:textColor="@color/option_item_name_color"
        android:textSize="18sp" />

</LinearLayout>